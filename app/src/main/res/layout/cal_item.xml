<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemMedicine"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemDate"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_toRightOf="@id/tvItemMedicine"
            android:layout_alignBottom="@id/tvItemMedicine"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemDetail1"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginRight="5dp"
            android:text="아침"
            android:textSize="16sp"
            android:textColor="#AAAAAA"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemDetail2"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginRight="5dp"
            android:text="점심"
            android:textSize="16sp"
            android:textColor="#AAAAAA"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemDetail3"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginRight="5dp"
            android:text="저녁"
            android:textSize="16sp"
            android:textColor="#AAAAAA"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemDetail4"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginRight="5dp"
            android:text="식전 30분"
            android:textSize="16sp"
            android:textColor="#AAAAAA"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemDetail5"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="식후 30분"
            android:textSize="16sp"
            android:textColor="#AAAAAA"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemMemo"
        android:textSize="16sp"/>

</LinearLayout>